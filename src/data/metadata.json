{
    "dataset_name": "machine_intelligence_dataset",
    "version": "1.0.0",
    "description": "Processed dataset for Machine Intelligence Node AI training.",
    "source": "Collected from open-source datasets and preprocessed for AI training.",
    "num_samples": 100000,
    "num_features": 512,
    "label_distribution": {
        "class_0": 48000,
        "class_1": 52000
    },
    "preprocessing": {
        "normalization": "Applied Unicode normalization (NFKC)",
        "lowercasing": true,
        "punctuation_removal": true,
        "stopword_removal": false,
        "custom_token_filter": ["example_token"]
    },
    "augmentation": {
        "synonym_replacement": true,
        "random_insertion": true,
        "random_deletion": true,
        "character_swap": false,
        "noise_injection": false,
        "back_translation": {
            "enabled": true,
            "languages": ["fr", "de"]
        }
    },
    "dataset_split": {
        "train_ratio": 0.75,
        "validation_ratio": 0.15,
        "test_ratio": 0.10,
        "stratified": true
    },
